    <h1>Namaste üôè</h1>

    <button class="button" onclick="rollDice()">üé≤ Dice Roll</button>
    <button class="button" onclick="generateNumber1000()">Generate Number (1 - 1000)</button>
    <button class="button" onclick="generateNumber100()">Generate Number (1 - 100)</button>

    <div class="result" id="resultArea"></div>

    <div class="footer">MADE BY KANO AHIR</div>

    <script>
        function rollDice() {
            const dice = Math.floor(Math.random() * 6) + 1;
            document.getElementById('resultArea').innerText = "Dice Rolled: " + dice;
        }

        function generateNumber1000() {
            const number = Math.floor(Math.random() * 1000) + 1;
            document.getElementById('resultArea').innerText = "Generated Number (1-1000): " + number;
        }

        function generateNumber100() {
            const number = Math.floor(Math.random() * 100) + 1;
            document.getElementById('resultArea').innerText = "Generated Number (1-100): " + number;
        }
    </script>

